<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.example.a15657_000.myview_demo.TopBar
        android:background="#FFFF00"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/topBar"
        app:leftBackground="@color/colorPrimary"
        app:leftText="Back"
        app:leftTextColor="#FFFF00"
        app:rightText="More"
        app:rightBackground="@color/colorPrimary"
        app:rightTextColor="#FFFF00"
        app:title="自定义标题"
        app:titleTextColor="@color/colorPrimary"
        app:titleTextSize="10sp"
        />
    <com.example.a15657_000.myview_demo.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp"
        android:text="My TextView"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:id="@+id/myTextView" />
    <com.example.a15657_000.myview_demo.Circle
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:id="@+id/circle" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:layout_toLeftOf="@+id/myTextView"
        android:layout_toStartOf="@+id/myTextView"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="31dp"
        android:id="@+id/button" />

</RelativeLayout>